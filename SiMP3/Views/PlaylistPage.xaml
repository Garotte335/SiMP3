<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="SiMP3.Views.PlaylistPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:models="clr-namespace:SiMP3.Models"
    BackgroundColor="#0A0A0A">

    <ContentPage.Resources>
        <ResourceDictionary>
            <Color x:Key="PageBackgroundColor">#0A0A0A</Color>
            <Color x:Key="SurfaceColor">#121216</Color>
            <Color x:Key="CardColor">#14141A</Color>
            <Color x:Key="BorderColor">#1F1F28</Color>
            <Color x:Key="AccentColor">#C084FC</Color>
            <Color x:Key="PrimaryTextColor">#FFFFFF</Color>
            <Color x:Key="MutedTextColor">#B5B5C0</Color>

            <Style x:Key="IconButton" TargetType="Border">
                <Setter Property="WidthRequest" Value="48" />
                <Setter Property="HeightRequest" Value="48" />
                <Setter Property="BackgroundColor" Value="{StaticResource SurfaceColor}" />
                <Setter Property="Stroke" Value="{StaticResource BorderColor}" />
                <Setter Property="StrokeThickness" Value="1" />
                <Setter Property="StrokeShape" Value="RoundRectangle 16" />
                <Setter Property="Padding" Value="0" />
            </Style>

            <DataTemplate x:Key="PlaylistCardTemplate" x:DataType="models:PlaylistModel">
                <SwipeView>
                    <SwipeView.RightItems>
                        <SwipeItems Mode="Reveal">
                            <SwipeItem
                                Text="Видалити"
                                BackgroundColor="#E53935"
                                IconImageSource="delete.png"
                                Invoked="OnDeletePlaylistSwipe" />
                        </SwipeItems>
                    </SwipeView.RightItems>
                    <Border
                        BackgroundColor="{StaticResource CardColor}"
                        Stroke="{StaticResource BorderColor}"
                        StrokeThickness="1"
                        StrokeShape="RoundRectangle 16"
                        Padding="12"
                        Margin="0">
                        <Grid ColumnDefinitions="Auto,*,Auto" ColumnSpacing="12" VerticalOptions="Center">
                            <Border
                                WidthRequest="50"
                                HeightRequest="50"
                                BackgroundColor="{StaticResource BorderColor}"
                                StrokeShape="RoundRectangle 12"
                                StrokeThickness="0"
                                VerticalOptions="Center">
                                <Image
                                    Source="list.png"
                                    Aspect="AspectFit"
                                    Margin="12" />
                            </Border>

                            <StackLayout Grid.Column="1" Spacing="4" VerticalOptions="Center">
                                <Label
                                    Text="{Binding Name}"
                                    FontSize="16"
                                    FontAttributes="Bold"
                                    TextColor="{StaticResource PrimaryTextColor}" />
                                <Label
                                    Text="{Binding Tracks.Count, StringFormat=' {0} композицій'}"
                                    FontSize="13"
                                    TextColor="{StaticResource MutedTextColor}" />
                            </StackLayout>

                            <Border
                                Grid.Column="2"
                                Style="{StaticResource IconButton}"
                                BackgroundColor="{StaticResource AccentColor}"
                                HorizontalOptions="End"
                                VerticalOptions="Center">
                                <ImageButton
                                    Padding="10"
                                    BackgroundColor="Transparent"
                                    Source="play_btn.png"
                                    Clicked="OnPlayPlaylistClicked" />
                            </Border>
                        </Grid>
                        <Border.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnPlaylistTapped" />
                        </Border.GestureRecognizers>
                    </Border>
                </SwipeView>
            </DataTemplate>
        </ResourceDictionary>
    </ContentPage.Resources>

    <Grid RowSpacing="14" Padding="16" BackgroundColor="{StaticResource PageBackgroundColor}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Header -->
        <Grid Grid.Row="0" ColumnDefinitions="*,Auto" ColumnSpacing="12" VerticalOptions="Center">
            <Label
                Text="Плейлисти"
                FontSize="22"
                FontAttributes="Bold"
                TextColor="{StaticResource PrimaryTextColor}" />
            <Border Grid.Column="1" Style="{StaticResource IconButton}" BackgroundColor="{StaticResource AccentColor}">
                <ImageButton
                    Padding="12"
                    BackgroundColor="Transparent"
                    Source="add_folder.png"
                    Clicked="OnAddPlaylistClicked"
                    HorizontalOptions="Center"
                    VerticalOptions="Center" />
            </Border>
        </Grid>

        <!-- List -->
        <CollectionView
            x:Name="PlaylistCollection"
            Grid.Row="1"
            ItemsSource="{Binding FilteredPlaylists}"
            SelectionMode="None"
            Margin="0,4,0,80"
            BackgroundColor="Transparent"
            ItemTemplate="{StaticResource PlaylistCardTemplate}">
            <CollectionView.ItemsLayout>
                <LinearItemsLayout Orientation="Vertical" ItemSpacing="12" />
            </CollectionView.ItemsLayout>
        </CollectionView>
        
        <!-- Mini player -->
        <Grid Grid.Row="2" Padding="0" VerticalOptions="End" HorizontalOptions="Fill" RowSpacing="0">
            <Border
                x:Name="MiniPlayerBar"
                Padding="12"
                BackgroundColor="{StaticResource SurfaceColor}"
                Stroke="{StaticResource BorderColor}"
                StrokeThickness="1"
                StrokeShape="RoundRectangle 18"
                HeightRequest="72"
                IsVisible="False"
                TranslationY="6"
                Margin="0,0,0,6">
                <Grid ColumnDefinitions="Auto,*,Auto,Auto,Auto" ColumnSpacing="12" VerticalOptions="Center">
                    <Border
                        WidthRequest="48"
                        HeightRequest="48"
                        BackgroundColor="{StaticResource BorderColor}"
                        StrokeShape="RoundRectangle 12"
                        StrokeThickness="0"
                        VerticalOptions="Center">
                        <Image
                            x:Name="MiniCover"
                            Aspect="AspectFill"
                            HorizontalOptions="Center"
                            VerticalOptions="Center" />
                    </Border>

                    <VerticalStackLayout Grid.Column="1" Spacing="2" VerticalOptions="Center">
                        <Label
                            x:Name="MiniTitle"
                            FontSize="14"
                            FontAttributes="Bold"
                            TextColor="{StaticResource PrimaryTextColor}"
                            LineBreakMode="TailTruncation" />
                        <Label
                            x:Name="MiniArtist"
                            FontSize="12"
                            TextColor="{StaticResource MutedTextColor}"
                            LineBreakMode="TailTruncation" />
                    </VerticalStackLayout>

                    <ImageButton
                        Grid.Column="2"
                        Source="prev.png"
                        BackgroundColor="Transparent"
                        HeightRequest="30"
                        WidthRequest="30"
                        Clicked="OnPrevClicked" />

                    <ImageButton
                        Grid.Column="3"
                        x:Name="MiniPlayPauseBtn"
                        Source="play_btn.png"
                        BackgroundColor="Transparent"
                        HeightRequest="36"
                        WidthRequest="36"
                        Clicked="OnPlayPauseClicked" />

                    <ImageButton
                        Grid.Column="4"
                        Source="next.png"
                        BackgroundColor="Transparent"
                        HeightRequest="30"
                        WidthRequest="30"
                        Clicked="OnNextClicked" />
                </Grid>

                <Border.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnMiniPlayerTapped" />
                </Border.GestureRecognizers>
            </Border>
        </Grid>
    </Grid>
</ContentPage>