<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="SiMP3.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:mobile="clr-namespace:SiMP3.Views.Mobile"
    xmlns:views="clr-namespace:SiMP3.Views"
    BackgroundColor="#0B0B0C">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Cancel import"
                     IconImageSource="cancel.png"
                     Clicked="OnCancelImportClicked"
                     Order="Primary"
                     Priority="0" />
    </ContentPage.ToolbarItems>

    <ContentPage.Resources>
        <Color x:Key="AccentColor">#C084FC</Color>
        <Color x:Key="PanelColor">#17181A</Color>
        <Color x:Key="PanelBorderColor">#303136</Color>
        <Color x:Key="TextPrimaryColor">#FFFFFF</Color>
        <Color x:Key="TextSecondaryColor">#CCCCCC</Color>
        <Color x:Key="TextMutedColor">#888888</Color>

        <Style TargetType="Label" x:Key="BaseLabel">
            <Setter Property="TextColor" Value="{StaticResource TextPrimaryColor}" />
            <Setter Property="LineBreakMode" Value="TailTruncation" />
        </Style>

        <Style TargetType="Label" x:Key="CaptionLabel" BasedOn="{StaticResource BaseLabel}">
            <Setter Property="FontSize" Value="12" />
            <Setter Property="TextColor" Value="{StaticResource TextMutedColor}" />
        </Style>

        <Style TargetType="Label" x:Key="PlaylistTitleLabel" BasedOn="{StaticResource BaseLabel}">
            <Setter Property="FontSize" Value="14" />
            <Setter Property="FontAttributes" Value="Bold" />
        </Style>

        <Style TargetType="Label" x:Key="PlaylistArtistLabel" BasedOn="{StaticResource BaseLabel}">
            <Setter Property="FontSize" Value="12" />
            <Setter Property="TextColor" Value="#BBBBBB" />
        </Style>
    </ContentPage.Resources>

    <Grid Padding="16" ColumnDefinitions="*,520" RowDefinitions="*">
        <mobile:MobileNavigationHost x:Name="MobileHost" />

        <Grid Grid.Column="1" RowDefinitions="*,Auto,Auto" RowSpacing="16">
            <Grid RowDefinitions="Auto,Auto" RowSpacing="12">
                <Border Grid.Row="0"
                        BackgroundColor="{StaticResource PanelColor}"
                        Stroke="{StaticResource PanelBorderColor}"
                        StrokeThickness="1"
                        StrokeShape="RoundRectangle 22"
                        Padding="14">
                    <Border.Shadow>
                        <Shadow Brush="#AA000000"
                                Offset="0,8"
                                Radius="22"
                                Opacity="0.5" />
                    </Border.Shadow>

                    <Grid>
                        <Image x:Name="CoverImage"
                               Aspect="AspectFit"
                               HeightRequest="410"
                               HorizontalOptions="Center"
                               VerticalOptions="Center" />

                        <views:AudioVisualizationView x:Name="VisualizationView"
                                                      IsVisible="False" />
                    </Grid>
                </Border>

                <VerticalStackLayout Grid.Row="1"
                                     Spacing="4"
                                     Padding="4,0,4,0">
                    <Label x:Name="lblTitle"
                           FontSize="20"
                           FontAttributes="Bold"
                           TextColor="{StaticResource TextPrimaryColor}" />

                    <Label x:Name="lblArtist"
                           FontSize="15"
                           TextColor="{StaticResource TextSecondaryColor}" />

                    <HorizontalStackLayout Spacing="6">
                        <Label x:Name="lblAlbum"
                               FontSize="13"
                               TextColor="#AAAAAA" />
                        <Label Text="â€¢"
                               FontSize="12"
                               TextColor="#666666"
                               VerticalOptions="Center" />
                        <Label x:Name="lblYear"
                               FontSize="13"
                               TextColor="#AAAAAA" />
                    </HorizontalStackLayout>

                    <Label x:Name="lblGenre"
                           FontSize="13"
                           TextColor="{StaticResource TextMutedColor}" />

                    <Label x:Name="lblTrackNumber"
                           Style="{StaticResource CaptionLabel}" />

                </VerticalStackLayout>
            </Grid>

            <Grid Grid.Row="1"
                  ColumnDefinitions="60,*,60"
                  ColumnSpacing="10"
                  VerticalOptions="Center">

                <Label x:Name="lblTimeStart"
                       Grid.Column="0"
                       WidthRequest="60"
                       HorizontalTextAlignment="Start"
                       FontSize="12"
                       TextColor="#DDDDDD" />

                <Slider x:Name="progressSlider"
                        Grid.Column="1"
                        Minimum="0" Maximum="1"
                        MinimumTrackColor="{StaticResource AccentColor}"
                        MaximumTrackColor="#444"
                        ThumbColor="{StaticResource AccentColor}"
                        ValueChanged="OnSeekChanged" />

                <Label x:Name="lblTimeEnd"
                       Grid.Column="2"
                       WidthRequest="60"
                       HorizontalTextAlignment="End"
                       FontSize="12"
                       TextColor="#DDDDDD" />
            </Grid>

            <Grid Grid.Row="2"
                  ColumnDefinitions="Auto,*,Auto"
                  VerticalOptions="Center"
                  Margin="0,0,0,4">

                <ImageButton Grid.Column="0"
                             x:Name="btnShuffle"
                             Source="shuffle.png"
                             BackgroundColor="Transparent"
                             Opacity="0.5"
                             HeightRequest="26"
                             WidthRequest="26"
                             Clicked="OnShuffleClicked">
                    <VisualStateManager.VisualStateGroups>
                        <VisualStateGroupList>
                            <VisualStateGroup x:Name="CommonStates">
                                <VisualState x:Name="Normal">
                                    <VisualState.Setters>
                                        <Setter Property="Scale" Value="1" />
                                        <Setter Property="Opacity" Value="0.9" />
                                    </VisualState.Setters>
                                </VisualState>
                                <VisualState x:Name="PointerOver">
                                    <VisualState.Setters>
                                        <Setter Property="Scale" Value="1.07" />
                                        <Setter Property="Opacity" Value="1" />
                                    </VisualState.Setters>
                                </VisualState>
                                <VisualState x:Name="Pressed">
                                    <VisualState.Setters>
                                        <Setter Property="Scale" Value="0.96" />
                                    </VisualState.Setters>
                                </VisualState>
                            </VisualStateGroup>
                        </VisualStateGroupList>
                    </VisualStateManager.VisualStateGroups>
                </ImageButton>

                <Grid Grid.Column="1"
                      ColumnDefinitions="Auto,Auto,Auto,Auto,Auto"
                      ColumnSpacing="24"
                      HorizontalOptions="Center">

                    <ImageButton Grid.Column="0"
                                 x:Name="btnRepeat"
                                 Source="repeat.png"
                                 BackgroundColor="Transparent"
                                 Opacity="0.5"
                                 HeightRequest="24"
                                 WidthRequest="24"
                                 Clicked="OnRepeatClicked" />

                    <ImageButton Grid.Column="1"
                                 Source="prev.png"
                                 BackgroundColor="Transparent"
                                 HeightRequest="34"
                                 WidthRequest="34"
                                 Clicked="OnPrevClicked">
                        <VisualStateManager.VisualStateGroups>
                            <VisualStateGroupList>
                                <VisualStateGroup x:Name="CommonStates">
                                    <VisualState x:Name="Normal">
                                        <VisualState.Setters>
                                            <Setter Property="Scale" Value="1" />
                                            <Setter Property="Opacity" Value="0.9" />
                                        </VisualState.Setters>
                                    </VisualState>
                                    <VisualState x:Name="PointerOver">
                                        <VisualState.Setters>
                                            <Setter Property="Scale" Value="1.07" />
                                            <Setter Property="Opacity" Value="1" />
                                        </VisualState.Setters>
                                    </VisualState>
                                    <VisualState x:Name="Pressed">
                                        <VisualState.Setters>
                                            <Setter Property="Scale" Value="0.96" />
                                        </VisualState.Setters>
                                    </VisualState>
                                </VisualStateGroup>
                            </VisualStateGroupList>
                        </VisualStateManager.VisualStateGroups>
                    </ImageButton>

                    <Border Grid.Column="2"
                            BackgroundColor="#22242A"
                            StrokeThickness="0"
                            StrokeShape="RoundRectangle 14"
                            Padding="12,10"
                            HorizontalOptions="Center"
                            VerticalOptions="Center">
                        <Grid ColumnDefinitions="Auto,Auto"
                              ColumnSpacing="12"
                              VerticalOptions="Center">
                            <Image x:Name="SmallCover"
                                   WidthRequest="40"
                                   HeightRequest="40"
                                   Aspect="AspectFill"
                                   HorizontalOptions="Center"
                                   VerticalOptions="Center" />

                            <ImageButton Grid.Column="1"
                                         BackgroundColor="Transparent"
                                         Padding="0"
                                         WidthRequest="36"
                                         HeightRequest="36"
                                         x:Name="PlayPauseBtnImg"
                                         Source="play_btn.png"
                                         Clicked="OnPlayPauseClicked" />
                        </Grid>
                    </Border>

                    <ImageButton Grid.Column="3"
                                 Source="next.png"
                                 BackgroundColor="Transparent"
                                 HeightRequest="34"
                                 WidthRequest="34"
                                 Clicked="OnNextClicked">
                        <VisualStateManager.VisualStateGroups>
                            <VisualStateGroupList>
                                <VisualStateGroup x:Name="CommonStates">
                                    <VisualState x:Name="Normal">
                                        <VisualState.Setters>
                                            <Setter Property="Scale" Value="1" />
                                            <Setter Property="Opacity" Value="0.9" />
                                        </VisualState.Setters>
                                    </VisualState>
                                    <VisualState x:Name="PointerOver">
                                        <VisualState.Setters>
                                            <Setter Property="Scale" Value="1.07" />
                                            <Setter Property="Opacity" Value="1" />
                                        </VisualState.Setters>
                                    </VisualState>
                                    <VisualState x:Name="Pressed">
                                        <VisualState.Setters>
                                            <Setter Property="Scale" Value="0.96" />
                                        </VisualState.Setters>
                                    </VisualState>
                                </VisualStateGroup>
                            </VisualStateGroupList>
                        </VisualStateManager.VisualStateGroups>
                    </ImageButton>

                    <ImageButton Grid.Column="4"
                                 Source="mute.png"
                                 BackgroundColor="Transparent"
                                 HeightRequest="22"
                                 WidthRequest="22"
                                 Clicked="OnMuteClicked">
                        <VisualStateManager.VisualStateGroups>
                            <VisualStateGroupList>
                                <VisualStateGroup x:Name="CommonStates">
                                    <VisualState x:Name="Normal">
                                        <VisualState.Setters>
                                            <Setter Property="Scale" Value="1" />
                                            <Setter Property="Opacity" Value="0.9" />
                                        </VisualState.Setters>
                                    </VisualState>
                                    <VisualState x:Name="PointerOver">
                                        <VisualState.Setters>
                                            <Setter Property="Scale" Value="1.07" />
                                            <Setter Property="Opacity" Value="1" />
                                        </VisualState.Setters>
                                    </VisualState>
                                    <VisualState x:Name="Pressed">
                                        <VisualState.Setters>
                                            <Setter Property="Scale" Value="0.96" />
                                        </VisualState.Setters>
                                    </VisualState>
                                </VisualStateGroup>
                            </VisualStateGroupList>
                        </VisualStateManager.VisualStateGroups>
                    </ImageButton>
                </Grid>

                <Grid Grid.Column="2"
                      ColumnDefinitions="Auto,80,Auto"
                      ColumnSpacing="10"
                      VerticalOptions="Center"
                      HorizontalOptions="End">

                    <Image x:Name="lblArtistBar"
                           Source="volume.png"
                           HeightRequest="20"
                           VerticalOptions="Center" />

                    <Slider x:Name="volumeSlider"
                            Grid.Column="1"
                            Minimum="0" Maximum="1"
                            MinimumTrackColor="{StaticResource AccentColor}"
                            MaximumTrackColor="#555"
                            ThumbColor="{StaticResource AccentColor}"
                            ValueChanged="OnVolumeChanged" />

                    <Label x:Name="lblTitleBar"
                           Grid.Column="2"
                           FontSize="12"
                           TextColor="#DDDDDD"
                           LineBreakMode="TailTruncation"
                           HorizontalOptions="End"
                           VerticalOptions="Center" />
                </Grid>
            </Grid>
        </Grid>
    </Grid>
</ContentPage>
