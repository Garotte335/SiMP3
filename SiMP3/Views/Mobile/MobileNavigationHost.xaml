<?xml version="1.0" encoding="utf-8" ?>
<ContentView
    x:Class="SiMP3.Views.Mobile.MobileNavigationHost"
    x:Name="NavigationHost"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:mobile="clr-namespace:SiMP3.Views.Mobile">

    <ContentView.Resources>
        <ResourceDictionary>
            <Color x:Key="PageBackgroundColor">#050505</Color>
            <Color x:Key="SurfaceColor">#0E0E10</Color>
            <Color x:Key="CardColor">#12131A</Color>
            <Color x:Key="BorderColor">#1E2030</Color>
            <Color x:Key="AccentColor">#C084FC</Color>
            <Color x:Key="PrimaryTextColor">#FFFFFF</Color>
            <Color x:Key="MutedTextColor">#B5B5C0</Color>

            <Style TargetType="Button" x:Key="TabButton">
                <Setter Property="BackgroundColor" Value="Transparent" />
                <Setter Property="TextColor" Value="{StaticResource MutedTextColor}" />
                <Setter Property="FontAttributes" Value="None" />
                <Setter Property="Padding" Value="10,8" />
            </Style>
        </ResourceDictionary>
    </ContentView.Resources>

    <Grid RowSpacing="0" BackgroundColor="{StaticResource PageBackgroundColor}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Top bar -->
        <Grid Grid.Row="0" Padding="16,12" ColumnDefinitions="Auto,*,Auto" VerticalOptions="Center">
            <HorizontalStackLayout Spacing="10" VerticalOptions="Center">
                <ImageButton
                    Source="menu.png"
                    BackgroundColor="Transparent"
                    HeightRequest="32"
                    WidthRequest="32" />
                <Label
                    Text="SiMP3"
                    FontSize="20"
                    FontAttributes="Bold"
                    TextColor="{StaticResource PrimaryTextColor}" />
            </HorizontalStackLayout>

            <StackLayout Grid.Column="2" Orientation="Horizontal" Spacing="8" IsVisible="{OnPlatform Windows=True, MacCatalyst=True, Android=False}">
                <Button x:Name="VisualizationButton" Text="Visualization" Clicked="OnVisualizationClicked" Padding="14,8" BackgroundColor="{StaticResource SurfaceColor}" TextColor="{StaticResource PrimaryTextColor}" CornerRadius="10" />
                <Button Text="Add files" Clicked="OnAddFilesClicked" Padding="14,8" BackgroundColor="{StaticResource SurfaceColor}" TextColor="{StaticResource PrimaryTextColor}" CornerRadius="10" />
            </StackLayout>
        </Grid>

        <!-- Tabs -->
        <Grid Grid.Row="1" Padding="16,6" BackgroundColor="{StaticResource PageBackgroundColor}">
            <HorizontalStackLayout Spacing="14" HorizontalOptions="Center">
                <Button x:Name="AllTab" Text="All" Clicked="OnAllClicked" Style="{StaticResource TabButton}" />
                <Button x:Name="ArtistsTab" Text="Artists" Clicked="OnArtistsClicked" Style="{StaticResource TabButton}" />
                <Button x:Name="AlbumsTab" Text="Albums" Clicked="OnAlbumsClicked" Style="{StaticResource TabButton}" />
                <Button x:Name="PlaylistsTab" Text="Playlists" Clicked="OnPlaylistsClicked" Style="{StaticResource TabButton}" />
            </HorizontalStackLayout>
        </Grid>

        <!-- Content -->
        <ContentPresenter x:Name="ContentHost" Grid.Row="2" />
    </Grid>
</ContentView>
