<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="SiMP3.Views.SettingsPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    BackgroundColor="#050505">

    <ContentPage.Resources>
        <ResourceDictionary>
            <Color x:Key="SurfaceColor">#0E0E10</Color>
            <Color x:Key="CardColor">#12131A</Color>
            <Color x:Key="BorderColor">#1E2030</Color>
            <Color x:Key="PrimaryTextColor">#FFFFFF</Color>
            <Color x:Key="MutedTextColor">#B5B5C0</Color>
        </ResourceDictionary>
    </ContentPage.Resources>

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="18">
            <Label Text="Налаштування" FontSize="22" FontAttributes="Bold" TextColor="{StaticResource PrimaryTextColor}" />

            <Border BackgroundColor="{StaticResource CardColor}" Stroke="{StaticResource BorderColor}" StrokeThickness="1" StrokeShape="RoundRectangle 16" Padding="14">
                <VerticalStackLayout Spacing="8">
                    <Label Text="Про застосунок" FontSize="16" TextColor="{StaticResource PrimaryTextColor}" FontAttributes="Bold" />
                    <Label Text="Музичний програвач SiMP3. Версія 1.0. Автор: SvD." TextColor="{StaticResource MutedTextColor}" FontSize="14" />
                </VerticalStackLayout>
            </Border>

            <Border BackgroundColor="{StaticResource CardColor}" Stroke="{StaticResource BorderColor}" StrokeThickness="1" StrokeShape="RoundRectangle 16" Padding="14">
                <Grid ColumnDefinitions="*,Auto" ColumnSpacing="12" VerticalOptions="Center">
                    <VerticalStackLayout Spacing="4">
                        <Label Text="Очистити плейлисти" FontSize="16" FontAttributes="Bold" TextColor="{StaticResource PrimaryTextColor}" />
                        <Label Text="Видалити всі збережені плейлисти, включно з Улюбленими." TextColor="{StaticResource MutedTextColor}" FontSize="13" />
                    </VerticalStackLayout>
                    <Border Grid.Column="1" WidthRequest="48" HeightRequest="48" BackgroundColor="{StaticResource SurfaceColor}" Stroke="{StaticResource BorderColor}" StrokeThickness="1" StrokeShape="RoundRectangle 16" HorizontalOptions="End" VerticalOptions="Center">
                        <ImageButton Grid.Column="1" Padding="12" BackgroundColor="Transparent" Source="delete.png" Clicked="OnClearPlaylists" HorizontalOptions="Center" VerticalOptions="Center" />
                    </Border>
                </Grid>
            </Border>

            <Border BackgroundColor="{StaticResource CardColor}" Stroke="{StaticResource BorderColor}" StrokeThickness="1" StrokeShape="RoundRectangle 16" Padding="14">
                <Grid ColumnDefinitions="*,Auto" ColumnSpacing="12" VerticalOptions="Center">
                    <VerticalStackLayout Spacing="4">
                        <Label Text="Перевірити наявність оновлень" FontSize="16" FontAttributes="Bold" TextColor="{StaticResource PrimaryTextColor}" />
                        <Label Text="Скоро будуть, якщо автор не забуде :)." TextColor="{StaticResource MutedTextColor}" FontSize="13" />
                    </VerticalStackLayout>
                    <Button Grid.Column="1" Text="Check" Clicked="OnCheckUpdates" BackgroundColor="{StaticResource SurfaceColor}" TextColor="{StaticResource PrimaryTextColor}" CornerRadius="12" Padding="14,10" />
                </Grid>
            </Border>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>